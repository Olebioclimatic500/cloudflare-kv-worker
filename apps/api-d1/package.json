{
  "name": "@cloudflare-kv/api-d1",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Cloudflare D1 Worker API (KV-compatible)",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "bun run predeploy && wrangler deploy --minify",
    "deploy:force": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "migrate": "./scripts/migrate-d1.sh",
    "migrate:remote": "./scripts/migrate-d1.sh --remote",
    "migrate:create": "wrangler d1 migrations create MY_DB"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "@hono/valibot-validator": "^0.5.3",
    "@hono/zod-openapi": "^1.1.3",
    "@scalar/hono-api-reference": "^0.9.21",
    "@valibot/to-json-schema": "^1.3.0",
    "hono": "^4.9.11",
    "hono-openapi": "^1.1.0",
    "valibot": "^1.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250116.0",
    "bun-types": "latest",
    "wrangler": "^4.4.0"
  }
}